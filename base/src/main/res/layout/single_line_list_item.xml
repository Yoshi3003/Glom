<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/single_line_list_item_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_begin="@dimen/list_item_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/single_line_list_item_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="@dimen/list_item_margin" />

    <ImageView
        android:id="@+id/single_line_list_item_left_icon"
        android:layout_width="@dimen/list_item_small_icon"
        android:layout_height="@dimen/list_item_small_icon"
        app:layout_constraintStart_toStartOf="@+id/single_line_list_item_start_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/single_line_list_item_title"
        android:layout_marginEnd="32dp"
        tools:src="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/single_line_list_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Single-line item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/single_line_list_item_left_icon"
        app:layout_constraintEnd_toStartOf="@+id/single_line_list_item_right_icon"
        android:gravity="start"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageView
        tools:visibility="visible"
        android:id="@+id/single_line_list_item_right_icon"
        android:layout_width="@dimen/list_item_small_icon"
        android:layout_height="@dimen/list_item_small_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/single_line_list_item_title"
        app:layout_constraintEnd_toStartOf="@+id/single_line_list_item_end_guideline"
        android:layout_marginStart="16dp"
        tools:src="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
