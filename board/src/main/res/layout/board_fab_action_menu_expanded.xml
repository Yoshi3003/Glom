<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/board_fab_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/fab_margin"
    android:paddingEnd="22dp"
    android:paddingTop="@dimen/fab_margin"
    android:paddingBottom="@dimen/fab_margin"
    android:clipToPadding="false" >

    <TextView
        android:id="@+id/board_fab_new_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/board_fab_new_item"
        app:layout_constraintTop_toTopOf="@+id/board_fab_new_item"
        app:layout_constraintBottom_toBottomOf="@+id/board_fab_new_item"
        android:layout_marginEnd="8dp"
        android:text="@string/board_action_new_item"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/greyish_brown"
        android:padding="6dp"
        android:elevation="6dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/board_fab_new_item"
        style="@style/Widget.Glom.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        app:fabSize="mini"
        app:backgroundTint="@color/calm_blue"  />

    <TextView
        android:id="@+id/board_fab_customize_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/board_fab_customize"
        app:layout_constraintTop_toTopOf="@+id/board_fab_customize"
        app:layout_constraintBottom_toBottomOf="@+id/board_fab_customize"
        android:layout_marginEnd="8dp"
        android:text="@string/board_action_customize"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/greyish_brown"
        android:padding="6dp"
        android:elevation="6dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/board_fab_customize"
        style="@style/Widget.Glom.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_sync"
        app:tint="@color/white"
        app:fabSize="mini"
        app:backgroundTint="@color/warning_orange"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board_fab_new_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
