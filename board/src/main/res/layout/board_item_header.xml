<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/board_item_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/card_header_item_text_margin"
        android:layout_marginEnd="@dimen/card_header_item_text_margin"
        android:textAppearance="@style/TextAppearance.H3"
        android:text="Header"
        android:textColor="?android:textColorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal" />

</FrameLayout>