<resources>

    <style name="Theme.Glom.DialogActivity" parent="Theme.Glom">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
        <item name="android:listDivider">@null</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="colorControlHighlight">@color/grey</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextAppearance.H4.Highlight" parent="@style/TextAppearance.H4">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/reddish</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H4.Light" parent="@style/TextAppearance.H4">
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="CardView.BoardItem" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginStart">@dimen/card_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_side_margin</item>
    </style>

    <style name="CardView.BoardItem.Selectable" parent="CardView.BoardItem">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.Glom.EditText.Title" parent="Theme.Glom">
        <item name="colorControlNormal">@color/card_background</item>
        <item name="colorControlActivated">@color/lightish_red</item>
    </style>

    <style name="CardView.TextView">
        <item name="android:textAppearance">@style/TextAppearance.H4</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="CardView.TextView.Secondary" parent="CardView.TextView">
        <item name="android:textAppearance">@style/TextAppearance.H4.Light</item>
    </style>

    <style name="CardView.EditText" parent="CardView.TextView">
        <item name="android:background">@color/white</item>
    </style>

</resources>
