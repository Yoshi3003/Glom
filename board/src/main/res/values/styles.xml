<resources>

    <style name="TextAppearance.H4.Highlight" parent="@style/TextAppearance.H4">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/reddish</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H4.Light" parent="@style/TextAppearance.H4">
        <item name="android:textColor">@color/warm_grey</item>
    </style>
    <style name="TextAppearance.H5.Light" parent="@style/TextAppearance.H5">
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="CardView.BoardItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginStart">@dimen/card_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_side_margin</item>
    </style>

    <style name="CardView.BoardItem.Selectable" parent="CardView.BoardItem">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.Glom.EditText.Title" parent="Theme.Glom">
        <item name="colorControlNormal">@color/card_background</item>
        <item name="colorControlActivated">@color/lightish_red</item>
    </style>

    <style name="CardView.TextView">
        <item name="android:textAppearance">@style/TextAppearance.H4</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="CardView.TextView.Secondary" parent="CardView.TextView">
        <item name="android:textAppearance">@style/TextAppearance.H4.Light</item>
    </style>

    <style name="CardView.EditText" parent="CardView.TextView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Chip.DateTimePicker" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@drawable/bg_chip</item>
        <item name="chipStrokeColor">@drawable/bg_chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@drawable/bg_chip_icon_tint</item>
        <item name="android:textColor">@drawable/bg_chip_text_color</item>
        <item name="android:checkable">true</item>
        <item name="android:selectable">true</item>
        <item name="android:focusable">true</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="ImageButton.BoardItem" parent="Widget.Glom.Button.Flat" >
        <item name="android:layout_width">@dimen/board_item_action_button_size</item>
        <item name="android:layout_height">@dimen/board_item_action_button_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

</resources>
